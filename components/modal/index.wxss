/* pages/login/components/modal/index.wxss */
.container{
    width: 750rpx;
    height: 100%;
    position: fixed;
    left: 0; top: 0;
}
.bg{
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .3);
    position: absolute;
    left: 0;
    top: 0;
}
.content{
    width: 100%;
    height: 50%;
    background-color: #fff;
    border-radius: 20rpx 20rpx 0 0;
    position: absolute;
    bottom: 0;
    left: 0;
}
.title{
    font-size: 30rpx;
    color: #333;
    height: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 25rpx;
}
.close{
    position: absolute;
    right: 0;
    top: 0;
    width: 80rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}