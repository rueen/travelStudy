/* pages/usercenter/components/serviceBtn/index.wxss */
.serviceBtnWrap{
    width: 100%;
    display: flex;
    justify-content: center;
    margin-top: 30rpx;
}
.serviceBtn{
    width: 660rpx;
    height: 76rpx;
    border-radius: 38rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-right: 30rpx;
    padding-left: 10rpx;
    box-sizing: border-box;
    background: -webkit-linear-gradient(left,#fff2e8,#fff7f1,#fce7d5);
}
.serviceHead{
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
}
.serviceText1{
    font-weight: bold;
    font-size: 26rpx;
    margin-left: 20rpx;
}
.serviceText2{
    font-size: 22rpx;
    color: #555;
    margin-left: 10rpx;
}
.left{
    display: flex;
    align-items: center;
}