/* pages/usercenter/components/head/index.wxss */
@import '/style/base.wxss';
.container{
    padding: 30rpx;
    /* background-color: #e3d9d1; */
    background-color: #fcca3b;
    padding-bottom: 70rpx;
    display: flex;
    align-items: center;
    box-sizing: border-box;
}
.avatarBox{
    width: 88rpx;
    height: 88rpx;
    border-radius: 44rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f0f0f2;
    border: 4rpx solid #fff;
    box-sizing: border-box;
    padding: 0;
    margin: 0;
}
.avatar{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50rpx;
}
.nickname{
    display: flex;
    align-items: center;
}
.userName{
    font-size: 30rpx;
    font-weight: bold;
    padding-left: 20rpx;
}
.nicknameInput{
    font-size: 24rpx;
    margin-left: 20rpx;
    background-color: #fff;
    width: 400rpx;
    height: 60rpx;
    padding: 0 10rpx;
    box-sizing: border-box;
}
.editBtn{
    width: 60rpx;
    height: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.checkBtn{
    width: 60rpx;
    height: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}