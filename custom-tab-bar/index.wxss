/* custom-tab-bar/index.wxss */
.container{
    display: flex;
    width: 100%;
    background-color: #fff;
    height: 48px;
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
    box-shadow: 5rpx 5rpx 10rpx 5rpx rgba(0, 0, 0, .05);
}
.item{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
}
.iconWrap{
    width: 22px;
    height: 22px;
    position: relative;
}
.icon{
    position: absolute;
    z-index: 2;
}
.text{
    font-size: 20rpx;
    color: #666;
    margin-top: 5rpx;
}
.currentItem .text{
    color: #000000;
}
.currentItem .iconWrap::after{
    content: '';
    display: block;
    width: 30rpx;
    height: 30rpx;
    /* background-color: #aee0d5; */
    background-color: #ecd38d;
    position: absolute;
    z-index: 1;
    border-radius: 15rpx;
    bottom: 0;
    left: 50%;
    margin-left: -15rpx;
}